{
  "include": [
    "src/**/*" ],
  "exclude": ["node_modules", "dist", "public", "src/import/**/*"],
  "compilerOptions": {
    "target": "ES2017",            // 或 ES2020 / ESNext
    "lib": ["ES2015", "DOM"],      // 确保包含 Promise 和浏览器 API
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
